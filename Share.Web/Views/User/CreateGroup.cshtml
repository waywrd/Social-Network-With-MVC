@model Group
@{
    ViewData["Title"] = "CreateGroup";
}

<h1>CreateGroup</h1>

<div class="row justify-content-center">
    <div class="col-md-6 col-md-offset-4">
        <form method="post" asp-action="CreateGroup" asp-controller="User">

            <div class="form-group">
                <label asp-for="GroupName">Group Name <span class="require">*</span></label>
                <input asp-for="GroupName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="GroupDescription">Description</label>
                <textarea rows="5" asp-for="GroupDescription" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <select class="form-control" asp-for="GroupStatusEnum" asp-items="Html.GetEnumSelectList<GroupStatusEnum>()">
                </select>
            </div>




            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    Create
                </button>

                <button class="btn btn-default">
                    Cancel
                </button>
            </div>

        </form>
    </div>
</div>
